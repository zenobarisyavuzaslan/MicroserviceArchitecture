@model CheckoutInfoInput
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Order" asp-action="Checkout" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Adres Bilgileri</h5>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Province"></label>
                        <input type="text" class="form-control" asp-for="Province" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="District"></label>
                        <input type="text" class="form-control" asp-for="District" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Street"></label>
                        <input type="text" class="form-control" asp-for="Street" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Line"></label>
                        <input type="text" class="form-control" asp-for="Line" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ZipCode"></label>
                        <input type="text" class="form-control" asp-for="ZipCode" />
                    </div>

                    <h5 class="card-title">Ödeme Bilgileri</h5>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CardName"></label>
                        <input type="text" class="form-control" asp-for="CardName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CardNumber"></label>
                        <input type="text" class="form-control" asp-for="CardNumber" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Expiration"></label>
                        <input type="text" class="form-control" asp-for="Expiration" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CVV"></label>
                        <input type="text" class="form-control" asp-for="CVV" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ödeme Özet</h5>
                    <table class="table table-striped">
                        @foreach (var item in ViewBag.basket.BasketItems as List<BasketItemViewModel>)
                        {
                            <tr><td>@item.CourseName</td></tr>
                            <tr><td>@item.Price</td></tr>
                        }
                        <tr>
                            <td>@(ViewBag.Basket.HasDiscount?"İndirmli Fiyat":"Toplam Fiyat")</td>
                            <td>@(ViewBag.Basket.TotalPrice) TL</td>
                        </tr>
                    </table>
                    <button type="submit" class="btn btn-success">Ödemeyi Tamamla</button>
                </div>
            </div>
        </div>
    </div>


</form>

